<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuestApp.View"
             xmlns:ViewModel="clr-namespace:QuestApp.ViewModel" x:Class="QuestApp.View.MainView"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <d:UserControl.DataContext>
        <ViewModel:MainViewModel/>
    </d:UserControl.DataContext>
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Border Grid.Row="0"
                    Background="#19000000">
                <StackPanel Margin="4" Height="30" Orientation="Horizontal">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Счёт: "/>
                        <TextBlock Text="{Binding CurrentActor.Score}"/>
                    </StackPanel>
                </StackPanel>
            </Border>
            <Border Grid.Row="1" Margin="8" MinHeight="100" VerticalAlignment="Center"
                    CornerRadius="4" Background="#19000000">
                <TextBlock VerticalAlignment="Center"
                           TextAlignment="Center" TextWrapping="Wrap"
                           Text="{Binding CurrentQuestion.Description}"/>
            </Border>
            <Border Grid.Row="2" Margin="8" MinHeight="100"
                    CornerRadius="4" Background="#19000000">
                <ItemsControl VerticalAlignment="Center" x:Name="itemsControl" ItemsSource="{Binding CurrentQuestion.Answers}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Command="{Binding ElementName=itemsControl, Path=DataContext.SelectAnswerCommand}"
                    CommandParameter="{Binding Guid}">
                                <StackPanel>
                                    <TextBlock Text="{Binding Description}"/>
                                </StackPanel>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Border>
        </Grid>
    </Grid>
</UserControl>
