<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuestApp.View"
        xmlns:Model="clr-namespace:QuestApp.Model" x:Class="QuestApp.View.MessageDialogWindow"
        mc:Ignorable="d"
        Title="{Binding Title}" Height="200" Width="500" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <d:Window.DataContext>
        <Model:Message/>
    </d:Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Margin="4">
            <TextBlock Text="{Binding Description}"/>
        </Label>
        <StackPanel Grid.Row="1" Margin="4" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Margin="2" Padding="2" MinWidth="100" IsDefault="True" Content="OK" Click="Accept_Click"/>
            <Button Margin="2" Padding="2" MinWidth="100" IsCancel="True" Content="Отмена"/>
        </StackPanel>
    </Grid>
</Window>
