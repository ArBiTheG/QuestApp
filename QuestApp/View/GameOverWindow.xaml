<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuestApp.View"
        xmlns:Entity="clr-namespace:QuestApp.Data.Entity" x:Class="QuestApp.View.GameOverWindow"
        mc:Ignorable="d"
        Title="{Binding Name}" Height="400" Width="500" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <d:Window.DataContext>
        <Entity:GameOver/>
    </d:Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Margin="4">
            <TextBlock Text="{Binding Description}"/>
        </Label>
        <StackPanel Grid.Row="1" Margin="4">
            <Button Margin="2" Padding="2" IsDefault="True" Content="Новая игра" Click="Accept_Click"/>
            <Button Margin="2" Padding="2" IsCancel="True" Content="Выйти"/>
        </StackPanel>
    </Grid>
</Window>
